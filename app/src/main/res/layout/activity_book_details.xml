<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.activity.BookDetailsActivity">

    <include layout="@layout/include_toolbar" />

    <TextView
        android:id="@+id/txtTitleDetailsBook"
        style="@style/MyStyleTextViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/title_book_detail" />

    <TextView
        android:id="@+id/txtTitleBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        tools:text="Titulo do Livro" />

    <TextView
        android:id="@+id/txtDescritpionDetailsBook"
        style="@style/MyStyleTextViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/text_description_book_detail" />

    <TextView
        android:id="@+id/txtDescriptionBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        tools:text="Descrição do Livro" />

</LinearLayout>